#!/usr/bin/env python3
"""Run PGD."""
import logging
import sys
import surfex


if __name__ == "__main__":

    kwargs = surfex.parse_args_surfex_binary(sys.argv[1:], "pgd")
    debug = kwargs.get("debug")

    if debug:
        logging.basicConfig(format='%(asctime)s %(levelname)s %(pathname)s:%(lineno)s %(message)s',
                            level=logging.DEBUG)
    else:
        logging.basicConfig(format='%(asctime)s %(levelname)s %(message)s', level=logging.INFO)
    logging.info("************ pgd ******************")
    surfex.run_surfex_binary("pgd", **kwargs)
