#!/usr/bin/env python3
"""Run the SODA binary."""
import sys
import logging
import surfex


if __name__ == "__main__":

    kwargs = surfex.parse_args_surfex_binary(sys.argv[1:], "soda")
    debug = kwargs.get("debug")

    if debug:
        logging.basicConfig(format='%(asctime)s %(levelname)s %(pathname)s:%(lineno)s %(message)s',
                            level=logging.DEBUG)
    else:
        logging.basicConfig(format='%(asctime)s %(levelname)s %(message)s', level=logging.INFO)
    logging.info("************ soda ******************")
    surfex.run_surfex_binary("soda", **kwargs)
